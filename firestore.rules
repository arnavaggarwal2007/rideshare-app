rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Validate emergency contacts array
    function hasValidEmergencyContacts() {
      return !request.resource.data.keys().hasAny(['emergencyContacts']) ||
        (request.resource.data.emergencyContacts is list &&
         request.resource.data.emergencyContacts.size() <= 3);
    }
    
    // Validate ride preferences object
    function hasValidRidePreferences() {
      let prefs = request.resource.data;
      return !prefs.keys().hasAny(['ridePreferences']) ||
        (prefs.ridePreferences is map &&
         prefs.ridePreferences.keys().hasAll(['musicTaste', 'chattiness', 'petFriendly', 'smokingOk']) &&
         prefs.ridePreferences.petFriendly is bool &&
         prefs.ridePreferences.smokingOk is bool);
    }
    
    // Users collection - users can read and write their own documents
    match /users/{userId} {
      // Allow user to read their own profile
      allow read: if isSignedIn() && isOwner(userId);
      
      // Allow user to create their own profile (for signup flow)
      allow create: if isSignedIn() && isOwner(userId) && 
                       hasValidEmergencyContacts() && 
                       hasValidRidePreferences();
      
      // Allow user to update their own profile
      allow update: if isSignedIn() && isOwner(userId) && 
                       hasValidEmergencyContacts() && 
                       hasValidRidePreferences();
      
      // Don't allow deletion for now
      allow delete: if false;
    }
    
    // Rides collection - drivers can manage their own rides
    match /rides/{rideId} {
      // Anyone authenticated can read rides (for browsing/search)
      allow read: if isSignedIn();

      // Only authenticated users can create rides, and must be the driver
      allow create: if isSignedIn() && request.resource.data.driverId == request.auth.uid;

      // Only the driver can update their own ride
      allow update: if isSignedIn() && resource.data.driverId == request.auth.uid;

      // Only the driver can delete their own ride
      allow delete: if isSignedIn() && resource.data.driverId == request.auth.uid;

      // TODO: Tighten rules for bookings, status transitions, and field validation in future sprints
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
