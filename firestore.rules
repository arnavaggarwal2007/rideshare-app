rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Validate emergency contacts array
    function hasValidEmergencyContacts() {
      return !request.resource.data.keys().hasAny(['emergencyContacts']) ||
        (request.resource.data.emergencyContacts is list &&
         request.resource.data.emergencyContacts.size() <= 3);
    }
    
    // Validate ride preferences object
    function hasValidRidePreferences() {
      let prefs = request.resource.data;
      return !prefs.keys().hasAny(['ridePreferences']) ||
        (prefs.ridePreferences is map &&
         prefs.ridePreferences.keys().hasAll(['musicTaste', 'chattiness', 'petFriendly', 'smokingOk']) &&
         prefs.ridePreferences.petFriendly is bool &&
         prefs.ridePreferences.smokingOk is bool);
    }
    
    // Users collection - users can read and write their own documents
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (for viewing driver profiles)
      // Writes remain restricted to the owner
      allow read: if isSignedIn();
      
      // Allow user to create their own profile (for signup flow)
      allow create: if isSignedIn() && isOwner(userId) && 
                       hasValidEmergencyContacts() && 
                       hasValidRidePreferences();
      
      // Allow user to update their own profile
      allow update: if isSignedIn() && isOwner(userId) && 
                       hasValidEmergencyContacts() && 
                       hasValidRidePreferences();
      
      // Don't allow deletion for now
      allow delete: if false;
    }
    
    // Rides collection - drivers can manage their own rides
    match /rides/{rideId} {
      // Anyone authenticated can read rides (for browsing/search)
      allow read: if isSignedIn();

      // Only authenticated users can create rides, and must be the driver
      allow create: if isSignedIn() && request.resource.data.driverId == request.auth.uid;

      // Only the driver can update their own ride
      allow update: if isSignedIn() && resource.data.driverId == request.auth.uid;

      // Only the driver can delete their own ride
      allow delete: if isSignedIn() && resource.data.driverId == request.auth.uid;

      // TODO: Tighten rules for bookings, status transitions, and field validation in future sprints
    }
    
    // RideRequests collection - seat booking requests
    match /rideRequests/{requestId} {
      // Riders can read their own requests; drivers can read requests for their rides
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.riderId || 
                      request.auth.uid == resource.data.driverId);
      
      // Only authenticated riders can create requests
      allow create: if isSignedIn() && 
                       request.resource.data.riderId == request.auth.uid &&
                       request.resource.data.status == 'pending';
      
      // Only the driver can update request status (accept/decline) and add tripId
      allow update: if isSignedIn() && 
                       request.auth.uid == resource.data.driverId;
      
      // Rider can delete their own pending request (cancel)
      allow delete: if isSignedIn() && 
                       request.auth.uid == resource.data.riderId &&
                       resource.data.status == 'pending';
    }
    
    // Trips collection - confirmed bookings created when requests are accepted
    match /trips/{tripId} {
      // Only rider and driver can read the trip
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.riderId || 
                      request.auth.uid == resource.data.driverId);
      
      // Trip creation is allowed by backend (driver accepting request)
      allow create: if isSignedIn();
      
      // Allow driver to update status, statusHistory, and timestamp fields only
      allow update: if isSignedIn() && 
                       request.auth.uid == resource.data.driverId &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['status', 'statusHistory', 'startedAt', 'completedAt', 'updatedAt']);
      
      // Allow rider to confirm trip completion (only riderConfirmedCompletion, riderConfirmedAt, updatedAt)
      allow update: if isSignedIn() && 
                       request.auth.uid == resource.data.riderId &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['riderConfirmedCompletion', 'riderConfirmedAt', 'updatedAt']);
      
      // Trips cannot be deleted by users
      allow delete: if false;
    }

    // Chats collection - messaging between driver and rider
    match /chats/{chatId} {
      // Only participants can read the chat
      allow read: if isSignedIn() && 
                     request.auth.uid in resource.data.participants;
      
      // Chats are created by backend when trip is confirmed
      allow create: if isSignedIn();
      
      // Participants can update lastMessage and unreadCount
      allow update: if isSignedIn() && 
                       request.auth.uid in resource.data.participants;
      
      // Chats cannot be deleted
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Only chat participants can read messages
        allow read: if isSignedIn() && 
                       request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Only chat participants can send messages, and senderId must match auth.uid
        allow create: if isSignedIn() && 
                         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
                         request.resource.data.senderId == request.auth.uid;
        
        // Allow participants to update isRead status
        allow update: if isSignedIn() && 
                         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Messages cannot be deleted (immutable)
        allow delete: if false;
      }
    }

    // Push tokens collection - users manage their own device tokens
    // Any authenticated user can read tokens (to send notifications)
    // But can only modify their own
    match /pushTokens/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
